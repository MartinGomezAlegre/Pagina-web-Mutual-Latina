<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mutual Latina</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pagina_web.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="main-nav__container">
        <nav class="main-nav navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container">
                <a class="main-nav__brand navbar-brand d-flex align-items-center" asp-page="/Index">
                    <img src="img/ChatGPT Image Aug 7, 2025, 10_35_44 AM.png" alt="Logo Mutual Latina" class="main-nav__logo">
                    <span class="main-nav__brand-text">Mutual Latina</span>
                </a>

                <button class="main-nav__toggler navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                    <ul class="main-nav__list navbar-nav">
                        <li class="main-nav__item nav-item">
                            <a class="main-nav__link nav-link" href="#inicio">Inicio</a>
                        </li>

                        <li class="main-nav__item nav-item"><a class="main-nav__link nav-link" href="#sobre">Sobre Latina</a></li>
                        <li class="main-nav__item nav-item"><a class="main-nav__link nav-link" href="#servicios">Servicios</a></li>
                        <li class="main-nav__item nav-item"><a class="main-nav__link nav-link" href="#contacto">Contacto</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="main-footer">

        <div class="container text-center">
            <span class="main-footer__copyright">
                &copy;
                2025 - Mutual Latina
            </span>
            <a class="main-footer__link" asp-page="/Privacy">Política de Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>